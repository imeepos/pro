# ========================================
# Web åº”ç”¨é•œåƒï¼ˆå‰ç«¯ Angular é¡¹ç›®ï¼‰
# ========================================
# æž¶æž„ï¼šåŸºäºŽ packages-builder æä¾›çš„é¢„æž„å»º packages
# ä¼˜åŒ–ï¼šå¤ç”¨ packages-builderï¼Œæ— éœ€ Playwright
# ç­–ç•¥ï¼špackages â†’ builder â†’ production (nginx)
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æž„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/web Angular åº”ç”¨
# åŸºç¡€ï¼špackages
# ========================================
FROM packages AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

# ä½¿ç”¨ nestjs ç”¨æˆ·ä½œä¸ºä¸»è¦ç”¨æˆ·ï¼Œå‡å°‘æƒé™åˆ‡æ¢
USER nestjs
WORKDIR /app

# ç¡®ä¿ç»Ÿä¸€ç¼“å­˜ç›®å½•æƒé™
RUN mkdir -p /home/nestjs/.bun/install/cache

# å¤åˆ¶ web åº”ç”¨é…ç½®å’Œä¾èµ–çš„ packages
COPY --chown=nestjs:nodejs apps/web/package.json ./apps/web/
COPY --chown=nestjs:nodejs packages/components ./packages/components
COPY --chown=nestjs:nodejs packages/sdk ./packages/sdk

# å®‰è£…ä¾èµ– - ä½¿ç”¨ç»Ÿä¸€çš„ç¼“å­˜ç›®å½•
RUN --mount=type=cache,id=bun-web-builder,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/web ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç å¹¶æž„å»º
COPY --chown=nestjs:nodejs apps/web ./apps/web

RUN echo "ðŸ—ï¸  æž„å»º @pro/web..." && \
    bun --filter @pro/web build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒï¼ˆnginx + é™æ€æ–‡ä»¶ï¼‰
# åŸºç¡€ï¼šnginx:alpine
# ========================================
FROM nginx:alpine AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder /app/apps/web/dist/web/browser /usr/share/nginx/html

# å¤åˆ¶ nginx é…ç½®
COPY apps/web/nginx.conf /etc/nginx/conf.d/default.conf

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\" \
    }" > /usr/share/nginx/html/build-info.json

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
