# ========================================
# Cleaner åº”ç”¨é•œåƒ
# ========================================
# æ¶æ„ï¼šåŸºäº packages-builder æä¾›çš„é¢„æ„å»º packages
# ä¼˜åŠ¿ï¼šä»…æ„å»ºåº”ç”¨æœ¬èº«ï¼Œå¤§å¹…æå‡æ„å»ºé€Ÿåº¦
# ç­–ç•¥ï¼šdevelopment (å¼€å‘) + builder (æ„å»º) + production (ç”Ÿäº§)
# ========================================

# ========================================
# æ„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æ„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘ç¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# ========================================
FROM imeepos/base:latest AS development

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

# åˆ‡æ¢åˆ° root ç”¨æˆ·ä»¥ç¡®ä¿å®‰è£…æƒé™
USER root
WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶æ‰€æœ‰é¢„æ„å»ºå†…å®¹
COPY --from=packages --chown=nestjs:nodejs /app /app

# å¤åˆ¶ cleaner åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/cleaner/package.json ./apps/cleaner/

# å®‰è£… cleaner åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-cleaner-dev,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/cleaner ä¾èµ–..." && \
    bun install

# æš´éœ²ç«¯å£
EXPOSE 3002

# åˆ‡æ¢å›é root ç”¨æˆ·
USER nestjs

# å¯åŠ¨å¼€å‘æœåŠ¡å™¨
CMD ["bun", "--filter", "@pro/cleaner", "start:dev"]

# ========================================
# æ„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæ„å»º @pro/cleaner åº”ç”¨
# ä¾èµ–ï¼špackages é•œåƒæä¾›çš„æ‰€æœ‰é¢„æ„å»º packages
# ========================================
FROM packages AS builder

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

# åˆ‡æ¢åˆ° root ç”¨æˆ·
USER root
WORKDIR /app

# å¤åˆ¶ cleaner åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/cleaner/package.json ./apps/cleaner/

# å®‰è£… cleaner åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-cleaner-builder,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/cleaner ä¾èµ–..." && \
    bun install

# å¤åˆ¶ cleaner åº”ç”¨æºç 
COPY --chown=nestjs:nodejs apps/cleaner/tsconfig.json ./apps/cleaner/
COPY --chown=nestjs:nodejs apps/cleaner/tsconfig.build.json* ./apps/cleaner/
COPY --chown=nestjs:nodejs apps/cleaner/nest-cli.json* ./apps/cleaner/
COPY --chown=nestjs:nodejs apps/cleaner/src ./apps/cleaner/src

# æ„å»º cleaner åº”ç”¨
RUN echo "ğŸ—ï¸  æ„å»º @pro/cleaner..." && \
    bun --filter @pro/cleaner build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šnode:20-alpine (è½»é‡çº§è¿è¡Œæ—¶)
# ========================================
FROM node:20-alpine AS production

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼šdumb-init ç”¨äºä¿¡å·å¤„ç†
RUN apk add --no-cache dumb-init

# åˆ›å»ºé root ç”¨æˆ·
RUN (getent group nodejs >/dev/null 2>&1 || addgroup -g 1001 -S nodejs) && \
    (id nestjs >/dev/null 2>&1 || adduser -S nestjs -u 1001)

WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶ packages ä¾èµ–å’Œæ„å»ºäº§ç‰©
COPY --from=packages --chown=nestjs:nodejs /app/package.json ./
COPY --from=packages --chown=nestjs:nodejs /app/bun.lockb ./
COPY --from=packages --chown=nestjs:nodejs /app/node_modules ./node_modules
COPY --from=packages --chown=nestjs:nodejs /app/packages ./packages

# ä» builder å¤åˆ¶ cleaner åº”ç”¨ä¾èµ–å’Œæ„å»ºäº§ç‰©
COPY --from=builder --chown=nestjs:nodejs /app/apps/cleaner/package.json ./apps/cleaner/
COPY --from=builder --chown=nestjs:nodejs /app/apps/cleaner/node_modules ./apps/cleaner/node_modules
COPY --from=builder --chown=nestjs:nodejs /app/apps/cleaner/dist ./apps/cleaner/dist

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

# åˆ‡æ¢åˆ°é root ç”¨æˆ·
USER nestjs

# æš´éœ²ç«¯å£
EXPOSE 3002

# ç¯å¢ƒå˜é‡
ENV NODE_ENV=production

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3002/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# ä½¿ç”¨ dumb-init å¯åŠ¨åº”ç”¨
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "apps/cleaner/dist/main.js"]
