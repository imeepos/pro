# ========================================
# Cleaner åº”ç”¨é•œåƒ
# ========================================
# æž¶æž„ï¼šåŸºäºŽ packages-builder æä¾›çš„é¢„æž„å»º packages
# ä¼˜åŒ–ï¼šæ— éœ€ Playwrightï¼Œç›´æŽ¥ç»§æ‰¿ packages å±‚
# ç­–ç•¥ï¼špackages â†’ development/builder/production
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æž„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘çŽ¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# åŸºç¡€ï¼šç›´æŽ¥ç»§æ‰¿ packagesï¼ˆæ— éœ€ Playwrightï¼‰
# ========================================
FROM packages AS development

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

USER nestjs
WORKDIR /app

# å¤åˆ¶ cleaner åº”ç”¨é…ç½®
COPY apps/cleaner/package.json ./apps/cleaner/

# å®‰è£… cleaner åº”ç”¨ä¾èµ–ï¼ˆåˆ©ç”¨ cache mount åŠ é€Ÿï¼‰
RUN --mount=type=cache,id=bun-cleaner-dev,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/cleaner ä¾èµ–..." && \
    bun install

EXPOSE 3002

CMD ["bun", "--filter", "@pro/cleaner", "start:dev"]

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/cleaner åº”ç”¨
# åŸºç¡€ï¼šç›´æŽ¥ç»§æ‰¿ packages
# ========================================
FROM packages AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER nestjs
WORKDIR /app

# å¤åˆ¶ cleaner åº”ç”¨é…ç½®
COPY apps/cleaner/package.json ./apps/cleaner/

# å®‰è£…ä¾èµ–
RUN --mount=type=cache,id=bun-cleaner-builder,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/cleaner ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç 
COPY apps/cleaner/tsconfig.json ./apps/cleaner/
COPY apps/cleaner/tsconfig.build.json* ./apps/cleaner/
COPY apps/cleaner/nest-cli.json* ./apps/cleaner/
COPY apps/cleaner/src ./apps/cleaner/src

# æž„å»ºåº”ç”¨
RUN echo "ðŸ—ï¸  æž„å»º @pro/cleaner..." && \
    bun --filter @pro/cleaner build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šç›´æŽ¥ç»§æ‰¿ packages
# ========================================
FROM packages AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

USER nestjs
WORKDIR /app

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder /app/apps/cleaner/package.json ./apps/cleaner/
COPY --from=builder /app/apps/cleaner/dist ./apps/cleaner/dist
COPY --from=builder /app/bun.lock ./

# ä»…å®‰è£…ç”Ÿäº§ä¾èµ–
RUN --mount=type=cache,id=bun-cleaner-prod,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/cleaner ç”Ÿäº§ä¾èµ–..." && \
    bun install --cwd ./apps/cleaner --production

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

EXPOSE 3002

ENV NODE_ENV=production

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3002/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

ENTRYPOINT ["dumb-init", "--"]
CMD ["bun", "apps/cleaner/dist/main.js"]
