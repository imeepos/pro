# ========================================
# Crawler åº”ç”¨é•œåƒ
# ========================================
# æž¶æž„ï¼šåŸºäºŽ imeepos/playwright åŸºç¡€é•œåƒ
# ä¼˜åŒ–ï¼šç»Ÿä¸€æƒé™å¤„ç†ï¼Œç®€åŒ–æž„å»ºæµç¨‹
# ç­–ç•¥ï¼šbase â†’ development/builder â†’ production
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Base é˜¶æ®µ
# ç›®çš„ï¼šåŸºäºŽ imeepos/playwright åŸºç¡€é•œåƒ
# åŒ…å«ï¼šé¢„è£…çš„ Playwright ä¾èµ–å’Œç»Ÿä¸€çš„æƒé™é…ç½®
# ========================================
FROM imeepos/playwright:latest AS base

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘çŽ¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# åŸºç¡€ï¼šbase (å·²åŒ…å« Playwright ä¾èµ–å’Œ packages)
# ========================================
FROM base AS development

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

USER nestjs
WORKDIR /app

# å¤åˆ¶ crawler åº”ç”¨é…ç½®
COPY apps/crawler/package.json ./apps/crawler/

# å®‰è£… crawler åº”ç”¨ä¾èµ–ï¼ˆåˆ©ç”¨ç»Ÿä¸€ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-crawler-dev,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

EXPOSE 3001

CMD ["bun", "--filter", "@pro/crawler", "start:dev"]

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/crawler åº”ç”¨
# åŸºç¡€ï¼šbase
# ========================================
FROM base AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER nestjs
WORKDIR /app

# å¤åˆ¶ crawler åº”ç”¨é…ç½®
COPY apps/crawler/package.json ./apps/crawler/

# å®‰è£…ä¾èµ–ï¼ˆåˆ©ç”¨ç»Ÿä¸€ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-crawler-builder,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç 
COPY apps/crawler/tsconfig.json ./apps/crawler/
COPY apps/crawler/tsconfig.build.json* ./apps/crawler/
COPY apps/crawler/nest-cli.json* ./apps/crawler/
COPY apps/crawler/src ./apps/crawler/
COPY apps/crawler/.env* ./apps/crawler/

# æž„å»ºåº”ç”¨
RUN echo "ðŸ—ï¸  æž„å»º @pro/crawler..." && \
    bun --filter @pro/crawler build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šbase (å¤ç”¨ Playwright ä¾èµ–)
# ========================================
FROM base AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

USER nestjs
WORKDIR /app

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder /app/apps/crawler/package.json ./apps/crawler/
COPY --from=builder /app/apps/crawler/dist ./apps/crawler/dist
COPY --from=builder /app/apps/crawler/.env* ./apps/crawler/
COPY --from=builder /app/bun.lock ./

# ä»…å®‰è£…ç”Ÿäº§ä¾èµ–ï¼ˆåˆ©ç”¨ç»Ÿä¸€ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-crawler-prod,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ç”Ÿäº§ä¾èµ–..." && \
    bun install --cwd ./apps/crawler --production

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

EXPOSE 3001

ENV NODE_ENV=production \
    NODE_OPTIONS="--experimental-global-webcrypto"

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

ENTRYPOINT ["dumb-init", "--"]
CMD ["bun", "apps/crawler/dist/main.js"]
