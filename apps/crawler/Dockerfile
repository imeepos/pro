# ========================================
# Crawler åº”ç”¨é•œåƒ
# ========================================
# æ¶æ„ï¼šåŸºäº packages-builder æä¾›çš„é¢„æ„å»º packages
# ä¼˜åŠ¿ï¼šä»…æ„å»ºåº”ç”¨æœ¬èº«ï¼Œå¤§å¹…æå‡æ„å»ºé€Ÿåº¦
# ç­–ç•¥ï¼šdevelopment (å¼€å‘) + builder (æ„å»º) + production (ç”Ÿäº§)
# ========================================

# ========================================
# æ„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æ„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘ç¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# ========================================
FROM imeepos/base:latest AS development

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

# åˆ‡æ¢åˆ° root ç”¨æˆ·ä»¥ç¡®ä¿å®‰è£…æƒé™
USER root
WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶æ‰€æœ‰é¢„æ„å»ºå†…å®¹
COPY --from=packages --chown=nestjs:nodejs /app /app

# å¤åˆ¶ crawler åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/crawler/package.json ./apps/crawler/

# å®‰è£… crawler åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-crawler-dev,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

# æš´éœ²ç«¯å£
EXPOSE 3001

# åˆ‡æ¢å›é root ç”¨æˆ·
USER nestjs

# å¯åŠ¨å¼€å‘æœåŠ¡å™¨
CMD ["bun", "--filter", "@pro/crawler", "start:dev"]

# ========================================
# æ„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæ„å»º @pro/crawler åº”ç”¨
# ä¾èµ–ï¼špackages é•œåƒæä¾›çš„æ‰€æœ‰é¢„æ„å»º packages
# ========================================
FROM packages AS builder

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

# åˆ‡æ¢åˆ° root ç”¨æˆ·
USER root
WORKDIR /app

# å¤åˆ¶ crawler åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/crawler/package.json ./apps/crawler/

# å®‰è£… crawler åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-crawler-builder,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

# å¤åˆ¶ crawler åº”ç”¨æºç å’Œé…ç½®
COPY --chown=nestjs:nodejs apps/crawler/tsconfig.json ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/tsconfig.build.json* ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/nest-cli.json* ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/src ./apps/crawler/src
COPY --chown=nestjs:nodejs apps/crawler/.env ./apps/crawler/

# æ„å»º crawler åº”ç”¨
RUN echo "ğŸ—ï¸  æ„å»º @pro/crawler..." && \
    bun --filter @pro/crawler build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šnode:20-alpine (è½»é‡çº§è¿è¡Œæ—¶)
# ========================================
FROM node:20-alpine AS production

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼šdumb-init ç”¨äºä¿¡å·å¤„ç†
RUN apk add --no-cache dumb-init

# åˆ›å»ºé root ç”¨æˆ·
RUN (getent group nodejs >/dev/null 2>&1 || addgroup -g 1001 -S nodejs) && \
    (id nestjs >/dev/null 2>&1 || adduser -S nestjs -u 1001)

WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶ packages ä¾èµ–å’Œæ„å»ºäº§ç‰©
COPY --from=packages --chown=nestjs:nodejs /app/package.json ./
COPY --from=packages --chown=nestjs:nodejs /app/bun.lock ./
COPY --from=packages --chown=nestjs:nodejs /app/node_modules ./node_modules
COPY --from=packages --chown=nestjs:nodejs /app/packages ./packages

# ä» builder å¤åˆ¶ crawler åº”ç”¨ä¾èµ–ã€æ„å»ºäº§ç‰©å’Œç¯å¢ƒé…ç½®
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/package.json ./apps/crawler/
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/node_modules ./apps/crawler/node_modules
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/dist ./apps/crawler/dist
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/.env ./apps/crawler/

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

# åˆ‡æ¢åˆ°é root ç”¨æˆ·
USER nestjs

# æš´éœ²ç«¯å£
EXPOSE 3001

# ç¯å¢ƒå˜é‡
ENV NODE_ENV=production \
    NODE_OPTIONS="--experimental-global-webcrypto"

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# ä½¿ç”¨ dumb-init å¯åŠ¨åº”ç”¨
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "apps/crawler/dist/main.js"]
