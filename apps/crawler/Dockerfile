# ========================================
# Crawler åº”ç”¨é•œåƒ
# ========================================
# æž¶æž„ï¼šåŸºäºŽ packages-builder æä¾›çš„é¢„æž„å»º packages
# ä¼˜åŒ–ï¼šå°† Playwright ä¾èµ–ç‹¬ç«‹ä¸ºç¼“å­˜å±‚ï¼Œé¿å…é‡å¤ä¸‹è½½
# ç­–ç•¥ï¼špackages â†’ runtime-deps (Playwright) â†’ development/production
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æž„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# Runtime ä¾èµ–é˜¶æ®µï¼ˆå…³é”®ä¼˜åŒ–ç‚¹ï¼‰
# ç›®çš„ï¼šé¢„è£… Playwright ç³»ç»Ÿä¾èµ–ï¼Œæ­¤å±‚ç‹¬ç«‹ç¼“å­˜
# ä¼˜åŠ¿ï¼šæºç å˜åŒ–ä¸å½±å“æ­¤å±‚ï¼Œä»…æž„å»ºä¸€æ¬¡å³å¯å¤ç”¨
# ========================================
FROM packages AS runtime-deps

USER root

# å®‰è£… Playwright æ‰€éœ€çš„ Alpine ç³»ç»ŸåŒ…
# ç²¾ç®€ç‰ˆæœ¬ï¼Œåªå®‰è£…å¿…éœ€ä¾èµ–
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    && rm -rf /var/cache/apk/*

# é…ç½® Chromium çŽ¯å¢ƒå˜é‡
ENV CHROME_BIN=/usr/bin/chromium-browser \
    CHROME_PATH=/usr/lib/chromium/

USER nestjs

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘çŽ¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# åŸºç¡€ï¼šruntime-deps (å·²åŒ…å« packages + Playwright)
# ========================================
FROM runtime-deps AS development

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

USER root
WORKDIR /app

# å¤åˆ¶ crawler åº”ç”¨é…ç½®
COPY --chown=nestjs:nodejs apps/crawler/package.json ./apps/crawler/

# å®‰è£… crawler åº”ç”¨ä¾èµ–ï¼ˆåˆ©ç”¨ cache mount åŠ é€Ÿï¼‰
RUN --mount=type=cache,id=bun-crawler-dev,target=/root/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

EXPOSE 3001

USER nestjs

CMD ["bun", "--filter", "@pro/crawler", "start:dev"]

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/crawler åº”ç”¨
# åŸºç¡€ï¼šruntime-deps
# ========================================
FROM runtime-deps AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER root
WORKDIR /app

# å¤åˆ¶ crawler åº”ç”¨é…ç½®
COPY --chown=nestjs:nodejs apps/crawler/package.json ./apps/crawler/

# å®‰è£…ä¾èµ–
RUN --mount=type=cache,id=bun-crawler-builder,target=/root/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç 
COPY --chown=nestjs:nodejs apps/crawler/tsconfig.json ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/tsconfig.build.json* ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/nest-cli.json* ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/src ./apps/crawler/
COPY --chown=nestjs:nodejs apps/crawler/.env* ./apps/crawler/

# æž„å»ºåº”ç”¨
RUN echo "ðŸ—ï¸  æž„å»º @pro/crawler..." && \
    bun --filter @pro/crawler build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šruntime-deps (å¤ç”¨ Playwright ä¾èµ–)
# ========================================
FROM runtime-deps AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

USER root
WORKDIR /app

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/package.json ./apps/crawler/
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/dist ./apps/crawler/dist
COPY --from=builder --chown=nestjs:nodejs /app/apps/crawler/.env* ./apps/crawler/
COPY --from=builder --chown=nestjs:nodejs /app/bun.lock ./

# ä»…å®‰è£…ç”Ÿäº§ä¾èµ–
RUN --mount=type=cache,id=bun-crawler-prod,target=/root/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/crawler ç”Ÿäº§ä¾èµ–..." && \
    bun install --cwd ./apps/crawler --production && \
    chown -R nestjs:nodejs apps/crawler/node_modules

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json && \
    chown nestjs:nodejs /app/build-info.json

USER nestjs

EXPOSE 3001

ENV NODE_ENV=production \
    NODE_OPTIONS="--experimental-global-webcrypto"

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

ENTRYPOINT ["dumb-init", "--"]
CMD ["bun", "apps/crawler/dist/main.js"]
