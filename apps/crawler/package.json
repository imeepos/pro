{
  "name": "@pro/crawler",
  "version": "1.0.0",
  "description": "Pro Crawler Microservice",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "pm2:dev": "pm2 start --name pro-crawler pnpm -- run start:dev",
    "pm2:prod": "pm2 start --name pro-crawler pnpm -- run start:prod",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --project tsconfig.build.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:cov": "vitest --coverage",
    "test:debug": "vitest --inspect-brk",
    "test:e2e": "vitest --config test/e2e/vitest.e2e.config.ts",
    "test:integration": "vitest --config vitest.config.ts --run test/integration/**/*.integration.test.ts",
    "test:integration:watch": "vitest --config vitest.config.ts --watch test/integration/**/*.integration.test.ts",
    "test:integration:cov": "vitest --config vitest.config.ts --coverage --run test/integration/**/*.integration.test.ts",
    "test:integration:debug": "vitest --config vitest.config.ts --inspect-brk test/integration/**/*.integration.test.ts",
    "test:unit": "vitest --run src/**/*.spec.ts",
    "test:unit:watch": "vitest --watch src/**/*.spec.ts",
    "test:simple": "vitest --config vitest.simple.config.ts",
    "test:legacy": "jest",
    "test:integration:search": "jest --config test/integration/jest.integration.config.js search-crawler.integration.test.ts",
    "test:integration:detail": "jest --config test/integration/jest.integration.config.js detail-crawler.integration.test.ts",
    "test:integration:account": "jest --config test/integration/jest.integration.config.js account-rotation.integration.test.ts",
    "test:integration:validation": "jest --config test/integration/jest.integration.config.js data-validation.integration.test.ts",
    "test:integration:core": "jest --config test/integration/jest.integration.config.js core/",
    "test:integration:e2e": "jest --config test/integration/jest.integration.config.js e2e/",
    "test:integration:failures": "jest --config test/integration/jest.integration.config.js failures/",
    "test:all": "jest && jest --config test/integration/jest.integration.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.13",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/platform-express": "^11.0.13",
    "@pro/crawler-utils": "workspace:*",
    "@pro/logger": "workspace:*",
    "@pro/mongodb": "workspace:*",
    "@pro/rabbitmq": "workspace:*",
    "@pro/types": "workspace:*",
    "axios": "^1.7.9",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@pro/eslint-config": "workspace:*",
    "@pro/prettier-config": "workspace:*",
    "@types/amqplib": "^0.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.8.0",
    "vitest": "^3.2.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": false
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "cache": false,
    "clearMocks": true,
    "restoreMocks": true,
    "resetMocks": true
  }
}
