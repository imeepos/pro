# 应用配置
NODE_ENV=development
PORT=3001

# API 服务地址
API_URL=http://api:3000

# RabbitMQ 配置
RABBITMQ_URL=amqp://rabbitmq:rabbitmq123@rabbitmq:5672

# MongoDB 配置
MONGODB_URI=mongodb://mongo:mongo123@mongo:27017/pro?authSource=admin
MONGODB_DATABASE=pro

# MinIO 配置
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=pro-storage

# 微博账号配置 (JSON格式)
# 可以配置多个账号，系统会自动轮换
WEIBO_ACCOUNTS=[
  {
    "id": 1,
    "nickname": "测试账号1",
    "cookies": [
      {
        "name": "SUB",
        "value": "_2AkMX...",
        "domain": ".weibo.com",
        "path": "/",
        "expires": 1751234567,
        "httpOnly": true,
        "secure": true,
        "sameSite": "None"
      }
    ],
    "status": "active"
  }
]

# 爬虫配置
CRAWLER_CONCURRENCY=5
CRAWLER_TIMEOUT=30000
CRAWLER_USER_AGENT=Pro-Crawler/1.0

# 请求延迟配置 (毫秒)
REQUEST_DELAY_MIN=2000
REQUEST_DELAY_MAX=5000

# 最大重试次数
MAX_RETRIES=3

# 页面超时配置
PAGE_TIMEOUT=30000

# 日志级别 (error, warn, info, debug, verbose)
LOG_LEVEL=debug

# 日志配置
LOG_FORMAT=json
LOG_TIMESTAMP=true
LOG_COLORIZE=true

# 请求追踪配置
TRACE_ENABLED=true
TRACE_SAMPLE_RATE=1.0

# 性能监控配置
PERFORMANCE_MONITORING_ENABLED=true
METRICS_COLLECTION_INTERVAL=30000
HEALTH_CHECK_INTERVAL=60000

# 调试日志配置
DEBUG_REQUEST_TIMING=true
DEBUG_BROWSER_EVENTS=true
DEBUG_ACCOUNT_ROTATION=true
DEBUG_STORAGE_OPERATIONS=true

# 日志轮转配置
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10
LOG_ROTATION_INTERVAL=daily
