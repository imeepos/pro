# ========================================
# Admin åº”ç”¨é•œåƒï¼ˆå‰ç«¯ Angular é¡¹ç›®ï¼‰
# ========================================
# æž¶æž„ï¼šåŸºäºŽ Playwright åŸºç¡€é•œåƒï¼ˆå·²åŒ…å«ç³»ç»Ÿä¾èµ–å’Œ Chromiumï¼‰
# ä¼˜åŒ–ï¼šåˆ©ç”¨é¢„æž„å»ºçš„ Playwright çŽ¯å¢ƒï¼Œç»Ÿä¸€æƒé™å’Œç¼“å­˜é…ç½®
# ç­–ç•¥ï¼šplaywright-base â†’ builder â†’ production (nginx)
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full
ARG AMAP_API_KEY

# ========================================
# Playwright åŸºç¡€é˜¶æ®µ
# ç›®çš„ï¼šä½¿ç”¨é¢„é…ç½®çš„ Playwright åŸºç¡€é•œåƒ
# ä¼˜åŠ¿ï¼šå·²åŒ…å« Chromiumã€ç³»ç»Ÿä¾èµ–ã€Bun è¿è¡Œæ—¶ï¼Œæ— éœ€é‡å¤å®‰è£…
# ========================================
FROM imeepos/playwright:latest AS base

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/admin Angular åº”ç”¨
# åŸºç¡€ï¼šplaywright-baseï¼ˆå·²åŒ…å«æ‰€æœ‰ç³»ç»Ÿä¾èµ–ï¼‰
# ========================================
FROM base AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE
ARG AMAP_API_KEY

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER nestjs
WORKDIR /app

# å¤åˆ¶ admin åº”ç”¨é…ç½®
COPY apps/admin/package.json ./apps/admin/

# å®‰è£…ä¾èµ–ï¼ˆä½¿ç”¨ç»Ÿä¸€çš„ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-admin-builder,target=/home/nestjs/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/admin ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç å¹¶æž„å»º
COPY apps/admin ./apps/admin

# é…ç½®çŽ¯å¢ƒå˜é‡å¹¶æž„å»º
ENV AMAP_API_KEY=${AMAP_API_KEY:-YOUR_AMAP_KEY}
RUN echo "AMAP_API_KEY=${AMAP_API_KEY}" >> apps/admin/.env.production && \
    echo "ðŸ—ï¸  æž„å»º @pro/admin..." && \
    bun --filter @pro/admin build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒï¼ˆnginx + é™æ€æ–‡ä»¶ï¼‰
# åŸºç¡€ï¼šnginx:alpine
# ========================================
FROM nginx:alpine AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder /app/apps/admin/dist/admin/browser /usr/share/nginx/html

# å¤åˆ¶ nginx é…ç½®
COPY apps/admin/nginx.conf /etc/nginx/conf.d/default.conf

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\" \
    }" > /usr/share/nginx/html/build-info.json

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
