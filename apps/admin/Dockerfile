# ========================================
# Admin åº”ç”¨é•œåƒï¼ˆå‰ç«¯ Angular é¡¹ç›®ï¼‰
# ========================================
# æž¶æž„ï¼šåŸºäºŽ packages-builder æä¾›çš„é¢„æž„å»º packages
# ä¼˜åŒ–ï¼šå°† Playwright ä¾èµ–ç‹¬ç«‹ä¸ºç¼“å­˜å±‚ï¼ˆç”¨äºŽ E2E æµ‹è¯•ï¼‰
# ç­–ç•¥ï¼špackages â†’ runtime-deps (Playwright) â†’ builder â†’ production (nginx)
# ========================================

# ========================================
# æž„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full
ARG AMAP_API_KEY

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æž„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# Runtime ä¾èµ–é˜¶æ®µï¼ˆå…³é”®ä¼˜åŒ–ç‚¹ï¼‰
# ç›®çš„ï¼šé¢„è£… Playwright ç³»ç»Ÿä¾èµ–ï¼Œæ­¤å±‚ç‹¬ç«‹ç¼“å­˜
# ä¼˜åŠ¿ï¼šæºç å˜åŒ–ä¸å½±å“æ­¤å±‚ï¼Œä»…æž„å»ºä¸€æ¬¡å³å¯å¤ç”¨
# ========================================
FROM packages AS runtime-deps

USER root

# å®‰è£… Playwright æ‰€éœ€çš„ Alpine ç³»ç»ŸåŒ…
# ç²¾ç®€ç‰ˆæœ¬ï¼Œåªå®‰è£…å¿…éœ€ä¾èµ–
RUN apk add --no-cache \
    chromium \
    nss \
    freetype \
    harfbuzz \
    ca-certificates \
    ttf-freefont \
    && rm -rf /var/cache/apk/*

# é…ç½® Chromium çŽ¯å¢ƒå˜é‡
ENV CHROME_BIN=/usr/bin/chromium-browser \
    CHROME_PATH=/usr/lib/chromium/

USER nestjs

# ========================================
# æž„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæž„å»º @pro/admin Angular åº”ç”¨
# åŸºç¡€ï¼šruntime-deps
# ========================================
FROM runtime-deps AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE
ARG AMAP_API_KEY

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER root
WORKDIR /app

# å¤åˆ¶ admin åº”ç”¨é…ç½®
COPY --chown=nestjs:nodejs apps/admin/package.json ./apps/admin/

# å®‰è£…ä¾èµ–
RUN --mount=type=cache,id=bun-admin-builder,target=/root/.bun/install/cache \
    echo "ðŸ“¦ å®‰è£… @pro/admin ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç å¹¶æž„å»º
COPY --chown=nestjs:nodejs apps/admin ./apps/admin

# é…ç½®çŽ¯å¢ƒå˜é‡å¹¶æž„å»º
ENV AMAP_API_KEY=${AMAP_API_KEY:-YOUR_AMAP_KEY}
RUN echo "AMAP_API_KEY=${AMAP_API_KEY}" >> apps/admin/.env.production && \
    echo "ðŸ—ï¸  æž„å»º @pro/admin..." && \
    bun --filter @pro/admin build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒï¼ˆnginx + é™æ€æ–‡ä»¶ï¼‰
# åŸºç¡€ï¼šnginx:alpine
# ========================================
FROM nginx:alpine AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# ä»Ž builder å¤åˆ¶æž„å»ºäº§ç‰©
COPY --from=builder /app/apps/admin/dist/admin/browser /usr/share/nginx/html

# å¤åˆ¶ nginx é…ç½®
COPY apps/admin/nginx.conf /etc/nginx/conf.d/default.conf

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\" \
    }" > /usr/share/nginx/html/build-info.json

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
