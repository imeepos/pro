# ========================================
# API åº”ç”¨é•œåƒ
# ========================================
# æ¶æ„ï¼šåŸºäº packages-builder æä¾›çš„é¢„æ„å»º packages
# ä¼˜åŠ¿ï¼šä»…æ„å»ºåº”ç”¨æœ¬èº«ï¼Œå¤§å¹…æå‡æ„å»ºé€Ÿåº¦
# ç­–ç•¥ï¼šdevelopment (å¼€å‘) + builder (æ„å»º) + production (ç”Ÿäº§)
# ========================================

# ========================================
# æ„å»ºå‚æ•°
# ========================================
ARG PACKAGES_IMAGE=imeepos/packages-builder:latest
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Packages é˜¶æ®µ
# ç›®çš„ï¼šå¼•å…¥é¢„æ„å»ºçš„å…±äº« packages
# ========================================
FROM ${PACKAGES_IMAGE} AS packages

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘ç¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# ========================================
FROM imeepos/base:latest AS development

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

# åˆ‡æ¢åˆ° root ç”¨æˆ·ä»¥ç¡®ä¿å®‰è£…æƒé™
USER root
WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶æ‰€æœ‰é¢„æ„å»ºå†…å®¹
COPY --from=packages --chown=nestjs:nodejs /app /app

# å¤åˆ¶ api åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/api/package.json ./apps/api/

# å®‰è£… api åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-api-dev,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/api ä¾èµ–..." && \
    bun install

# æš´éœ²ç«¯å£
EXPOSE 3000

# åˆ‡æ¢å›é root ç”¨æˆ·
USER nestjs

# å¯åŠ¨å¼€å‘æœåŠ¡å™¨
CMD ["bun", "--filter", "@pro/api", "start:dev"]

# ========================================
# æ„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæ„å»º @pro/api åº”ç”¨
# ä¾èµ–ï¼špackages é•œåƒæä¾›çš„æ‰€æœ‰é¢„æ„å»º packages
# ========================================
FROM packages AS builder

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

# åˆ‡æ¢åˆ° root ç”¨æˆ·
USER root
WORKDIR /app

# å¤åˆ¶ api åº”ç”¨çš„ package.json
COPY --chown=nestjs:nodejs apps/api/package.json ./apps/api/

# å®‰è£… api åº”ç”¨ä¾èµ–
RUN --mount=type=cache,id=bun-api-builder,target=/root/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/api ä¾èµ–..." && \
    bun install

# å¤åˆ¶ api åº”ç”¨æºç 
COPY --chown=nestjs:nodejs apps/api/tsconfig.json ./apps/api/
COPY --chown=nestjs:nodejs apps/api/tsconfig.build.json* ./apps/api/
COPY --chown=nestjs:nodejs apps/api/nest-cli.json* ./apps/api/
COPY --chown=nestjs:nodejs apps/api/src ./apps/api/src

# æ„å»º api åº”ç”¨
RUN echo "ğŸ—ï¸  æ„å»º @pro/api..." && \
    bun --filter @pro/api build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒï¼ŒåŒ…å« Playwright æ”¯æŒ
# åŸºç¡€ï¼šnode:20-slim (ä¸ packages-builder ç‰ˆæœ¬ä¸€è‡´)
# ========================================
FROM node:20-slim AS production

# ç»§æ‰¿æ„å»ºå‚æ•°
ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

# å…ƒæ•°æ®æ ‡ç­¾
LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

# å®‰è£…ç³»ç»Ÿä¾èµ–ï¼šdumb-init å’Œ Playwright æµè§ˆå™¨æ‰€éœ€åº“
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    dumb-init \
    curl \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    libpango-1.0-0 \
    libcairo2 \
    libatspi2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# åˆ›å»ºé root ç”¨æˆ·
RUN groupadd -g 1001 nodejs && \
    useradd -m -u 1001 -g nodejs nestjs

WORKDIR /app

# ä» packages é•œåƒå¤åˆ¶ packages ä¾èµ–å’Œæ„å»ºäº§ç‰©
COPY --from=packages --chown=nestjs:nodejs /app/package.json ./
COPY --from=packages --chown=nestjs:nodejs /app/bun.lock ./
COPY --from=packages --chown=nestjs:nodejs /app/node_modules ./node_modules
COPY --from=packages --chown=nestjs:nodejs /app/packages ./packages

# ä» builder å¤åˆ¶ api åº”ç”¨æ„å»ºäº§ç‰©
COPY --from=builder --chown=nestjs:nodejs /app/apps/api/package.json ./apps/api/
COPY --from=builder --chown=nestjs:nodejs /app/apps/api/dist ./apps/api/dist

# åœ¨ç”Ÿäº§é•œåƒä¸­é‡æ–°å®‰è£…ä¾èµ–ä»¥ç¡®ä¿ Node.js å…¼å®¹æ€§
USER root
RUN npm install --prefix ./apps/api && chown -R nestjs:nodejs apps/api/node_modules
USER nestjs

# å®‰è£… Playwright Chromium æµè§ˆå™¨
RUN npx playwright install chromium

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯æ–‡ä»¶
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

# åˆ‡æ¢åˆ°é root ç”¨æˆ·
USER nestjs

# æš´éœ²ç«¯å£
EXPOSE 3000

# ç¯å¢ƒå˜é‡
ENV NODE_ENV=production

# å¥åº·æ£€æŸ¥
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# ä½¿ç”¨ dumb-init å¯åŠ¨åº”ç”¨
ENTRYPOINT ["dumb-init", "--"]
CMD ["node", "apps/api/dist/main.js"]
