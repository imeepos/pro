# ========================================
# API åº”ç”¨é•œåƒ
# ========================================
# æ¶æ„ï¼šåŸºäº Playwright åŸºç¡€é•œåƒï¼Œé¢„è£…æ‰€æœ‰å¿…è¦ä¾èµ–
# ä¼˜åŒ–ï¼šç»Ÿä¸€æƒé™é…ç½®ï¼Œé¿å…é‡å¤å®‰è£… Playwright ä¾èµ–
# ç­–ç•¥ï¼šplaywright-base â†’ development/production
# ========================================

# ========================================
# æ„å»ºå‚æ•°
# ========================================
ARG BUILD_VERSION=1.0.0
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE=full

# ========================================
# Playwright åŸºç¡€é˜¶æ®µ
# ç›®çš„ï¼šåˆ©ç”¨é¢„è£… Playwright ä¾èµ–çš„åŸºç¡€é•œåƒ
# ä¼˜åŠ¿ï¼šåŒ…å« Chromiumã€ç³»ç»Ÿä¾èµ–ã€Bun è¿è¡Œæ—¶
# ========================================
FROM imeepos/playwright:latest AS base

# ========================================
# å¼€å‘é˜¶æ®µ
# ç›®çš„ï¼šæœ¬åœ°å¼€å‘ç¯å¢ƒï¼Œæ”¯æŒçƒ­é‡è½½
# åŸºç¡€ï¼šplaywright-base (å·²åŒ…å«æ‰€æœ‰ç³»ç»Ÿä¾èµ–)
# ========================================
FROM base AS development

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="development"

USER nestjs
WORKDIR /app

# å¤åˆ¶ API åº”ç”¨é…ç½®
COPY apps/api/package.json ./apps/api/

# å®‰è£… API åº”ç”¨ä¾èµ–ï¼ˆä½¿ç”¨ç»Ÿä¸€çš„ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-api-dev,target=/home/nestjs/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/api ä¾èµ–..." && \
    bun install

EXPOSE 3000

CMD ["bun", "--filter", "@pro/api", "start:dev"]

# ========================================
# æ„å»ºé˜¶æ®µ
# ç›®çš„ï¼šæ„å»º @pro/api åº”ç”¨
# åŸºç¡€ï¼šplaywright-base
# ========================================
FROM base AS builder

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="builder"

USER nestjs
WORKDIR /app

# å¤åˆ¶ API åº”ç”¨é…ç½®
COPY apps/api/package.json ./apps/api/

# å®‰è£…ä¾èµ–ï¼ˆä½¿ç”¨ç»Ÿä¸€çš„ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-api-builder,target=/home/nestjs/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/api ä¾èµ–..." && \
    bun install

# å¤åˆ¶æºç 
COPY apps/api/tsconfig.json ./apps/api/
COPY apps/api/tsconfig.build.json* ./apps/api/
COPY apps/api/nest-cli.json* ./apps/api/
COPY apps/api/src ./apps/api/src

# æ„å»ºåº”ç”¨
RUN echo "ğŸ—ï¸  æ„å»º @pro/api..." && \
    bun --filter @pro/api build

# ========================================
# ç”Ÿäº§é˜¶æ®µ
# ç›®çš„ï¼šæœ€å°åŒ–ç”Ÿäº§é•œåƒ
# åŸºç¡€ï¼šplaywright-base (å¤ç”¨æ‰€æœ‰é¢„è£…ä¾èµ–)
# ========================================
FROM base AS production

ARG BUILD_VERSION
ARG BUILD_TIME
ARG GIT_COMMIT
ARG BUILD_TYPE

LABEL version="${BUILD_VERSION}" \
      build-time="${BUILD_TIME}" \
      git-commit="${GIT_COMMIT}" \
      build-type="${BUILD_TYPE}" \
      stage="production"

USER nestjs
WORKDIR /app

# ä» builder å¤åˆ¶æ„å»ºäº§ç‰©
COPY --from=builder /app/apps/api/package.json ./apps/api/
COPY --from=builder /app/apps/api/dist ./apps/api/dist
COPY --from=builder /app/bun.lock ./

# å®‰è£…ç”Ÿäº§ä¾èµ–ï¼ˆä½¿ç”¨ç»Ÿä¸€çš„ç¼“å­˜ç›®å½•ï¼‰
RUN --mount=type=cache,id=bun-api-prod,target=/home/nestjs/.bun/install/cache \
    echo "ğŸ“¦ å®‰è£… @pro/api ç”Ÿäº§ä¾èµ–..." && \
    bun install --cwd ./apps/api --production

# åˆ›å»ºç‰ˆæœ¬ä¿¡æ¯
RUN echo "{ \
      \"version\": \"${BUILD_VERSION}\", \
      \"buildTime\": \"${BUILD_TIME}\", \
      \"gitCommit\": \"${GIT_COMMIT}\", \
      \"buildType\": \"${BUILD_TYPE}\", \
      \"stage\": \"production\", \
      \"nodeVersion\": \"$(node --version)\", \
      \"platform\": \"$(uname -a)\" \
    }" > /app/build-info.json

EXPOSE 3000

ENV NODE_ENV=production

HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# åˆ‡æ¢åˆ° root ç”¨æˆ·å®‰è£… dumb-initï¼ˆåŸºç¡€é•œåƒä¸­å¯èƒ½æœªåŒ…å«ï¼‰
USER root
RUN apk add --no-cache dumb-init

# åˆ‡æ¢å› nestjs ç”¨æˆ·è¿è¡Œåº”ç”¨
USER nestjs
ENTRYPOINT ["dumb-init", "--"]
CMD ["bun", "apps/api/dist/main.js"]
