{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": "tsconfig.json",
      "isolatedModules": true
    }]
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "testTimeout": 10000,
  "verbose": true,
  "cacheDirectory": "<rootDir>/.jest-cache",
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}