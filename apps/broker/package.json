{
  "name": "@pro/broker",
  "version": "1.0.0",
  "description": "Pro Broker Service - 任务调度中心",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "start:dev": "tsx watch src/main.ts",
    "start:prod": "node dist/main.js",
    "pm2:dev": "pm2 start --name pro-broker tsx -- watch src/main.ts",
    "pm2:prod": "pm2 start --name pro-broker node -- dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit --project tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@pro/core": "workspace:*",
    "@pro/entities": "workspace:*",
    "@pro/mongodb": "workspace:*",
    "@pro/rabbitmq": "workspace:*",
    "@pro/redis": "workspace:*",
    "@pro/types": "workspace:*",
    "@pro/utils": "workspace:*",
    "@pro/weibo": "workspace:*",
    "@pro/workflow-nestjs": "workspace:*",
    "node-cron": "^4.2.1",
    "pg": "^8.13.1",
    "pino": "^9.13.1",
    "pino-pretty": "^13.1.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@pro/eslint-config": "workspace:*",
    "@pro/prettier-config": "workspace:*",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.5.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.0",
    "tsx": "^4.19.2",
    "typescript": "~5.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
