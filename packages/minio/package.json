{
  "name": "@pro/minio",
  "version": "1.0.0",
  "description": "MinIO object storage wrapper",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.types.json",
    "build:js": "tsup",
    "build:types": "tsc --project tsconfig.types.json",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "keywords": ["minio", "storage", "s3"],
  "license": "UNLICENSED",
  "dependencies": {
    "minio": "^7.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/minio": "^7.1.1",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.0"
  }
}
