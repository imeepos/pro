{
    "name": "@pro/workflow-core",
    "version": "1.0.0",
    "description": "DAG工作流执行引擎核心包 - 基于状态机和访问者模式的无框架依赖工作流引擎",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "tsup && tsc --emitDeclarationOnly --outDir dist",
        "dev": "tsup --watch",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist",
        "main": "tsx src/main.ts",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "keywords": [
        "workflow",
        "dag",
        "state-machine",
        "visitor-pattern",
        "typescript",
        "async",
        "parallel-execution",
        "core",
        "framework-agnostic"
    ],
    "author": "Pro Team",
    "license": "MIT",
    "dependencies": {
        "@pro/core": "workspace:*",
        "@pro/rabbitmq": "workspace:*",
        "build": "^0.1.4"
    },
    "devDependencies": {
        "@vitest/coverage-v8": "^3.2.4",
        "tsup": "^8.5.0",
        "typescript": "^5.0.0",
        "vitest": "^3.2.4"
    },
    "files": [
        "dist",
        "src",
        "README.md"
    ],
    "publishConfig": {
        "access": "restricted",
        "registry": "https://npm.pkg.github.com"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/your-org/pro.git",
        "directory": "packages/workflow-core"
    },
    "homepage": "https://github.com/your-org/pro/tree/main/packages/workflow-core#readme",
    "bugs": {
        "url": "https://github.com/your-org/pro/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}