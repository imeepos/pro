{
  "name": "@pro/mongodb",
  "version": "1.0.0",
  "description": "MongoDB utilities for raw data storage",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.types.json",
    "build:js": "tsup",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": ["mongodb", "database", "crawler"],
  "license": "UNLICENSED",
  "dependencies": {
    "@pro/types": "workspace:*",
    "@nestjs/common": "^11.0.0",
    "@nestjs/mongoose": "^10.0.0",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nestjs/testing": "^11.0.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "jest": "^29.5.0",
    "mongodb-memory-server": "^9.1.6",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.0"
  }
}
