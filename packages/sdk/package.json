{
  "name": "@pro/sdk",
  "version": "1.0.0",
  "description": "SDK interface definitions for Pro platform",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.types.json",
    "build:js": "tsup",
    "build:types": "tsc --project tsconfig.types.json",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test"
  },
  "keywords": ["sdk", "api", "interfaces"],
  "license": "UNLICENSED",
  "dependencies": {
    "@pro/types": "workspace:*",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "~5.8.0"
  }
}
