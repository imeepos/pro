{
  "name": "@pro/entities",
  "version": "1.0.0",
  "description": "Shared entities and data models",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.types.json",
    "build:js": "tsup",
    "build:types": "tsc --project tsconfig.types.json",
    "main": "tsx src/main.ts",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:integration": "jest test/integration"
  },
  "keywords": [
    "entities",
    "data",
    "models"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "@pro/types": "workspace:*",
    "@pro/core": "workspace:*",
    "reflect-metadata": "0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@pro/eslint-config": "workspace:*",
    "@pro/prettier-config": "workspace:*",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.9",
    "ioredis": "^5.8.1",
    "jest": "^29.5.0",
    "mongodb": "^6.3.0",
    "mongodb-memory-server": "^9.1.6",
    "pg": "^8.11.3",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typeorm": "^0.3.20",
    "typescript": "~5.8.0"
  }
}
