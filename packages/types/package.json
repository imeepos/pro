{
  "name": "@pro/types",
  "version": "1.0.0",
  "description": "Shared TypeScript type definitions",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup && tsc --project tsconfig.types.json",
    "build:js": "tsup",
    "build:types": "tsc --project tsconfig.types.json",
    "dev": "tsup --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "echo \"No tests yet\""
  },
  "keywords": ["types", "typescript"],
  "license": "UNLICENSED",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "~5.8.0"
  }
}
